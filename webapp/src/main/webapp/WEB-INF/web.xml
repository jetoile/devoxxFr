<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <servlet>
        <servlet-name>Jersey Web Application</servlet-name>
        <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>com.sun.jersey.config.property.packages</param-name>
            <param-value>com.jetoile.devoxx.game.business, com.jetoile.devoxx.game.business.admin</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>Jersey Web Application</servlet-name>
        <url-pattern>/services/*</url-pattern>
    </servlet-mapping>


    <filter>
        <filter-name>Html5CorsFilter</filter-name>
        <filter-class>com.jetoile.devoxx.game.filter.Html5CorsFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>Html5CorsFilter</filter-name>
        <url-pattern>/services/*</url-pattern>
    </filter-mapping>

</web-app>