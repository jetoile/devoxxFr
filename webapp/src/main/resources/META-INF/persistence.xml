        <class>com.jetoile.devoxx.game.persistent.User</class>
        <properties>
            <property name="eclipselink.jdbc.driver" value="${jdbc.driver}"/>
            <property name="eclipselink.jdbc.url" value="${jdbc.url}"/>
            <property name="eclipselink.jdbc.user" value="${jdbc.username}"/>
            <property name="eclipselink.jdbc.password" value="${jdbc.password}"/>

            <property name="eclipselink.target-database"
                      value="${jdbc.target-database}"/>
            <property name="eclipselink.logging.level" value="OFF"/>
            <property name="eclipselink.orm.throw.exceptions" value="true"/>

            <property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
            <property name="eclipselink.ddl-generation.output-mode" value="database"/>

